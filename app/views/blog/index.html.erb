<div id="main-column">
<h1>Blog</h1>For the latest blog updates, add OpenBama Blog to your registered RSS feed list.<a href="/blog/feed.rss"><img src="<%= asset_path "rss-feed.png" %>" /></a>
<br />
<% @posts.each do |p| %>
	<h3><%= p.title %></h3>
	<span class="blog-date">Added on <%= p.created_at.strftime('%b %d, %Y') %></span>
	<span class="blog-author">By <%= p.name %></span>
	<p><%= raw p.description %></p>
	<div class="pagination"><a class="next_page" href="<%= p.post_url %>">Continue reading &#8594;</a></div>

<br />
<br />
<% end %>
<div style="float: right;">

<%= will_paginate @posts, :page_links => false %>

</div>
<br />

</div>

<% content_for(:side_bar) do %>
<h4>Archives</h4>
<div>
<ul>
<% @past_dates.each do |d| %>
<li><a href="/blog/<%= d.post_year %>/<%= d.post_month %>"><%= d.month_name %> <%= d.post_year %></a></li>
<% end %>
</ul>
</div>

<% end %>
