<div id="main-column">
   <h1>Latest From The OpenBama Blog</h1>
   <hr />
   <h3><%= @post.title %></h3>
   <span class="blog-date">Added on <%= @post.created_at.strftime('%b %d, %Y') %></span>
   <span class="blog-author">By <%= @post.name %></span>
   <p><%= raw @post.description %></p>
   <div class="pagination"><a class="next_page" href="<%= @post.post_url %>">Continue reading &#8594;</a></div>
   <br />
   <div><h3>Other recent posts</h3>
   	<% @posts.each do |p| %>
   		<div class="blog-link"><a href="<%= p.post_url %>"><%= p.title %></a> - <span class="blog-date">Added on <%= p.created_at.strftime('%b %d, %Y') %></span>
   <span class="blog-author">By <%= p.name %></span></div>
   	<% end %>
   	<br />
   	<div class="pagination">
   	<%= link_to "Read more from the OpenBama Blog â†’", "/blog", :class => "next_page" %> 
   </div>
   </div>
<br />
<h1>Committee Meetings</h1>
<hr />

<div>
<table id="committee_meetings" class="tablesorter">
<thead>
<tr><th>Meeting Date</th><th>Committee</th><th>Time</th><th>Location</th></tr></thead>
<tbody>
<% @meetings.each do |m| %>
<tr><td><%= m.meeting_date.strftime('%b %d, %Y') %></td><td><%= m.committee.committee_name %></td><td><%= m.meeting_time %></td><td><%= m.meeting_location %></td></tr>
<% end %>
</tbody>
</table>
</div>

   <br />
   <h1>Most Viewed</h1>
   <hr />
   <div class="round-corner-box">
      <h3>Most Viewed Bill</h3>
      <table style="width:100%;">
         <tr style="vertical-align:top;">
            <td style="text-align:left;width:10%;">
               <img src="/assets/bill_image-al.png" />
            </td>
            <td style="width:90%;">
               <div style="font-size: 2em;">
                  <a href="/bill/<%= @most_viewed_bill.bill_id %>"><%= @most_viewed_bill.bill.bill_type.upcase %><%= @most_viewed_bill.bill.number %></a>
               </div>
               <%= @most_viewed_bill.bill.description %>
               <br />
               <br />
               <div style="font-size: 2em;font-family: "Droid Sans",sans-serif;">
               Total Views: <%= @most_viewed_bill.page_views %>
   </div>
   </td></tr></table>
</div>
<div class="round-corner-box">
