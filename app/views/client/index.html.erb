<%= @client.display_name %></td></tr>
</table>
</div>
<div style="clear:both;">
<br />
<br />
<h2>Current Lobbyists</h2>
<% if @current_lobbyists and @current_lobbyists.count > 0 %>
<ul>
<% @current_lobbyists.each do |l| %>
	<li><a href="/lobbyist/<%= l.id %>"><%= l.display_name %></a></li>
<% end %>
</ul>
<% else %>
None to display at this time.
<% end %>
<br />
<br />
<h2>Past Lobbyists</h2>
<% if @past_lobbyists and @past_lobbyists.count > 0 %>
<ul>
<% @past_lobbyists.each do |pl| %>
	<li><a href="/lobbyist/<%= pl.id %>"><%= pl.display_name %></a></li>
<% end %>
</ul>
<% else %>
None to display at this time.
<% end %>
</div>
